<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/fragDeta"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/mensagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:text="Não há informações"
        android:textSize="24dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nome1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:text="Nome"
                    android:textSize="24dp"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:stretchColumns="2"
                    android:shrinkColumns="2">

                    <TableRow
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:id="@+id/img1"
                            android:src="@drawable/desc"
                            android:padding="10dp"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/descricao1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Descrição: "
                            android:textSize="18dp"
                            android:gravity="center|left"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/descricao2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:text="teste"
                            android:textSize="18dp"
                            android:gravity="center|left"
                            android:visibility="gone" />
                    </TableRow>

                    <TableRow
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:id="@+id/img2"
                            android:src="@drawable/resp"
                            android:padding="10dp"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/respo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Responsavel: "
                            android:textSize="18dp"
                            android:gravity="center|left"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/respo2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:text="teste"
                            android:textSize="18dp"
                            android:gravity="center|left"
                            android:visibility="gone" />
                    </TableRow>

                    <TableRow
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:id="@+id/img3"
                            android:src="@drawable/email"
                            android:padding="10dp"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Email: "
                            android:textSize="18dp"
                            android:gravity="center|left"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/email2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:text="teste"
                            android:layout_marginLeft="10dp"
                            android:textSize="18dp"
                            android:gravity="center|left"
                            android:visibility="gone" />
                    </TableRow>

                    <TableRow
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:id="@+id/img4"
                            android:src="@drawable/phone"
                            android:padding="10dp"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/telefone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Telefone: "
                            android:textSize="18dp"
                            android:gravity="center|left"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/telefone2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:text="teste"
                            android:textSize="18dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center|left"
                            android:visibility="gone" />

                    </TableRow>

                    <TableRow
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:id="@+id/img5"
                            android:src="@drawable/hora"
                            android:padding="10dp"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/horario"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Horário:"
                            android:textSize="18dp"
                            android:gravity="center|left"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/horario2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:text="teste"
                            android:textSize="18dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center|left"
                            android:visibility="gone" />
                    </TableRow>

                </TableLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>